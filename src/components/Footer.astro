---
import { Icon } from "astro-icon";
import { TWITTER_LINK, GITHUB_LINK, EMAIL } from "../config";
---

<footer class="p-4">
	<div class="max-w-screen-md container mx-auto flex items-center">
		<a href={`mailto:${EMAIL}`} class="flex gap-x-2 items-center">
			<Icon pack="ion" name="mail" class="w-6" />
			<span>{EMAIL}</span>
		</a>
		<div class="flex-auto"></div>
		<div class="flex gap-x-4">
			<a href={GITHUB_LINK}>
				<Icon pack="ion" name="logo-github" class="w-6" />
			</a>
			<a href={TWITTER_LINK}>
				<Icon pack="ion" name="logo-twitter" class="w-6" />
			</a>
		</div>
	</div>
</footer>
