---
const { post } = Astro.props;
---

<section class="flex flex-col gap-y-2">
    <div class="flex">
        <a href={post.url}>
            <h3 class="text-2xl">
                {post.frontmatter.title}
            </h3>
        </a>
        <div class="flex-auto"></div>
        <time>2022/123/123</time>
    </div>
    <div class="flex"></div>
    <p>{post.frontmatter.description}</p>
</section>
