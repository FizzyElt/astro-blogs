---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props as Props;
---

<html>
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="">
		<div
			class="w-full min-h-screen flex flex-col dark:bg-primaryDarkBgColor dark:text-white"
		>
			<Header />
			<main
				class="max-w-screen-md container mx-auto flex-auto py-6 dark:bg-primaryDarkBgColor"
			>
				<article class="flex flex-col gap-y-4 md:px-0 px-4">
					<section class="">
						<h2 class="text-2xl font-bold">{title || ""}</h2>
						<time>2022/12/12</time>
					</section>
					<hr />
					<div class="max-w-none prose dark:prose-invert">
						<slot />
					</div>
				</article>
			</main>
			<Footer />
		</div>
	</body>
</html>
